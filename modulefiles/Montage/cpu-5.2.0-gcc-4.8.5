#%Module######################################################################
#
# Montage modulefile
#
proc ModulesHelp { } {
  puts stderr "Sets up the paths you need to use Montage version 5.2.0"
}

source /home/app/modulefiles/common.tcl

set sys     [uname sysname]
set version cpu-5.2.0-gcc-4.8.5
set tool    Montage
module-whatis "Montage: The Astronomer's Toolkit for Building Image Mosaics and Analyzing Image Metadata

For further information see  (http://montage.ipac.caltech.edu)  

Compiled with gcc/4.8.5
"
if { [ module-info mode load ] } {
  if { [is-loaded $tool] && ! [is-loaded $tool/$version] } {
    module unload $tool
  }
}

#load_unless_already_loaded wcslib/cpu-6.2
#load_unless_already_loaded pgplot/cpu-5.2

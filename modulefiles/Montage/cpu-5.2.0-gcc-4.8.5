if {! [module-info mode whatis] } {
#prepend-path CPATH              /home/app/Duchamp/cpu/1.6.2/gcc/4.8.5/include
prepend-path PATH               /home/app/Montage/cpu/Montage_v5.0/bin/
prepend-path LD_LIBRARY_PATH    /home/app/Montage/cpu/Montage_v5.0/lib
}

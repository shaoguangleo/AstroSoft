#%Module######################################################################
#
# cfitsio modulefile
#
proc ModulesHelp { } {
  puts stderr "Sets up the paths you need to use cfitsio version 3450"
}

source /home/app/modulefiles/common.tcl

set sys     [uname sysname]
set version cpu-349-gcc-4.8.5
set tool    cfitsio
module-whatis "CFITSIO is a library of C and Fortran subroutines for reading and writing data
files in FITS (Flexible Image Transport System) data format. CFITSIO provides
simple high-level routines for reading and writing FITS files that insulate the
programmer from the internal complexities of the FITS format. CFITSIO also
provides many advanced features for manipulating and filtering the information
in FITS files.

For further information see https://heasarc.gsfc.nasa.gov/fitsio/fitsio.html

Compiled with gcc/4.8.5
"
if { [ module-info mode load ] } {
  if { [is-loaded $tool] && ! [is-loaded $tool/$version] } {
    module unload $tool
  }
}

#load_unless_already_loaded gcc/cpu-7.3.0

if {! [module-info mode whatis] } {
setenv       MAALI_CFITSIO_HOME /home/app/cfitsio/3.49/cpu/gcc/4.8.5
setenv       CFITSIO_ROOT       "/home/app/cfitsio/3.49/cpu/gcc/4.8.5"
setenv       CFITSIO            "/home/app/cfitsio/3.49/cpu/gcc/4.8.5"
prepend-path CPATH              /home/app/cfitsio/3.49/cpu/gcc/4.8.5/include
prepend-path FCPATH             /home/app/cfitsio/3.49/cpu/gcc/4.8.5/include
prepend-path FPATH              /home/app/cfitsio/3.49/cpu/gcc/4.8.5/include
prepend-path LD_LIBRARY_PATH    /home/app/cfitsio/3.49/cpu/gcc/4.8.5/lib
prepend-path MANPATH            /home/app/cfitsio/3.49/cpu/gcc/4.8.5/share/man
prepend-path PKG_CONFIG_PATH    /home/app/cfitsio/3.49/cpu/gcc/4.8.5/lib/pkgconfig
}

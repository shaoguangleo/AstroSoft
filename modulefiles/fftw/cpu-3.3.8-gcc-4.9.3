#%Module######################################################################
#
# fftw3 modulefile
#
proc ModulesHelp { } {
  puts stderr "Sets up the paths you need to use fftw version 3.8.8"
}

source /home/app/modulefiles/common.tcl

set sys     [uname sysname]
set version cpu-3.8.8-gcc-4.9.3
set tool    fftw
module-whatis "FFTW is a C subroutine library for computing the discrete Fourier transform (DFT) in one or more dimensions, of arbitrary input size, and of both real and complex data (as well as of even/odd data, i.e. the discrete cosine/sine transforms or DCT/DST). We believe that FFTW, which is free software, should become the FFT library of choice for most applications.

For further information see http://www.fftw.org/

Compiled with gcc/4.8.5
"
if { [ module-info mode load ] } {
  if { [is-loaded $tool] && ! [is-loaded $tool/$version] } {
    module unload $tool
  }
}

load_unless_already_loaded gcc/cpu-4.9.3

if {! [module-info mode whatis] } {
setenv       MAALI_FFTW_HOME    /home/app/fftw3/3.3.8/cpu/gcc/4.9.3
setenv       FFTW_ROOT          "/home/app/fftw3/3.3.8/cpu/gcc/4.9.3"
prepend-path CPATH              /home/app/fftw3/3.3.8/cpu/gcc/4.9.3/include
prepend-path FCPATH             /home/app/fftw3/3.3.8/cpu/gcc/4.9.3/include
prepend-path FPATH              /home/app/fftw3/3.3.8/cpu/gcc/4.9.3/include
prepend-path LD_LIBRARY_PATH    /home/app/fftw3/3.3.8/cpu/gcc/4.9.3/lib
prepend-path LIBRARY_PATH       /home/app/fftw3/3.3.8/cpu/gcc/4.9.3/lib
prepend-path MANPATH            /home/app/fftw3/3.3.8/cpu/gcc/4.9.3/share/man
prepend-path PKG_CONFIG_PATH    /home/app/fftw3/3.3.8/cpu/gcc/4.9.3/lib/pkgconfig
}

